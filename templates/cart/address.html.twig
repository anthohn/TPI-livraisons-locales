{% extends 'base.html.twig' %}

{% block title %}Cretegny - Nouvelle adresse{% endblock %}

{% block body %}


    <div class="mx-32 mt-24">

        <h2 class="text-4xl font-bold"><span class="underline underline-offset-4 decoration-8 decoration-green-400">Nouvelle adresse :</span></h2><br>
        <script src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key  }}&libraries=places"></script>

        {{ form_start(formAddress) }}
            <div class="grid gap-6 mb-6 md:grid-cols-2">
                {{ form_row(formAddress.addFirstName, {'label': false, 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'placeholder': 'Pr√©nom'}}) }}
                {{ form_row(formAddress.addLastName, {'label': false, 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'placeholder': 'Nom'}}) }}
            </div>
            <div class="grid gap-6 mb-6 md:grid-cols-2">
                {{ form_row(formAddress.idxTitle, {'label': false, 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5'}}) }}
                {{ form_row(formAddress.addAddress, {'label': false, 'attr': {'class': 'address-autocomplete bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'placeholder': 'Adresse'}}) }}
            </div>
            <div class="grid gap-6 mb-6 md:grid-cols-2">
                {{ form_row(formAddress.addCity, {'label': false, 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'placeholder': 'Ville'}}) }}
                {{ form_row(formAddress.addPc, {'label': false, 'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', 'placeholder': 'Code Postal'}}) }}
            </div>
            <button type="submit" class="text-black bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2">Sauvegarder</button>
            <a href="{{ path('app_user_cart') }}"  class="font-normal text-black text-sm">Annuler</a>
        {{ form_end(formAddress) }}

    </div>


{% endblock %}
     